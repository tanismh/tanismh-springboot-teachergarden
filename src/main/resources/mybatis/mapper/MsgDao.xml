    <select id="getMsgList" resultType="com.hwb.tg.Bean.Msg">
        SELECT
            *
        FROM
            msg
        WHERE
            msg.teacherId = #{param1}
        LIMIT #{param2}, #{param3}
    </select>

    <insert id="updateMsg">
        insert into
            msg (msgContent,teacherId,year,month)
        values
            (#{param1},#{param2},#{param3},#{param4})
    </insert>

</mapper>
